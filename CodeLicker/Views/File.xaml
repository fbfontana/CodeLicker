<UserControl x:Class="CodeLicker.Views.File"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CodeLicker.Views"
      xmlns:ViewModels="clr-namespace:CodeLicker.ViewModels"
      mc:Ignorable="d" 
      HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >


    <UserControl.DataContext>
        <ViewModels:FileActivityVM />
    </UserControl.DataContext>

    <Grid Name="TabContent" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="600*"/>
            <ColumnDefinition Width="23*"/>
        </Grid.ColumnDefinitions>
        
        <TextBox HorizontalAlignment="Left" Height="20" Margin="4,32,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="606" Grid.Column="2"/>
        <Label Content="Label" HorizontalAlignment="Right" Margin="7,28,0,0" VerticalAlignment="Top" Width="132" Grid.Column="1"/>

    </Grid>
</UserControl>
